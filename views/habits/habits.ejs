<%- include('../partials/head') %>
<!-- Incluye el head -->
<%- include('../partials/header') %>
<!-- Incluye el header -->
<%- include('../partials/sidebar') %>

<main class="col-md-9 ms-sm-auto col-lg-10 px-4">

    <% if (message) { %>
        <div class="alert alert-info">
          <%= message %>
        </div>
      <% } %>


    <div class="">
        <% habits.forEach(habit => { %>
            <div class="col card">
                <h2><%= habit.name %></h2>
                <p><%= habit.description %></p>
                <p><strong>Categoría:</strong> <%= habit.category %></p>
                <p><strong>Inicio:</strong> <%= habit.startDate.toDateString() %></p>
                <form action="/habits/edit/<%= habit._id %>" method="get">
                    <button type="submit">Editar</button>
                </form>
                <form action="/habits/delete/<%= habit._id %>" method="POST">
                    <button type="submit" onclick="return confirm('¿Estás seguro de eliminar este hábito?')">Eliminar</button>
                </form>
            </div>
        <% }) %>
    </div>
    
    <a href="/habits/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Nuevo Hábito
    </a>
      

</main>

