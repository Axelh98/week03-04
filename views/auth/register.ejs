<%- include('../partials/head') %> <!-- Incluye el head -->       

<main class="container-fluid min-vh-100 d-flex justify-content-center align-items-center">
    <!-- Formulario de registro centrado -->
    <div class="card shadow-lg" style="max-width: 400px; width: 100%; padding: 20px;">
      <h2 class="text-center mb-4">Create an account</h2>
      
      <form action="/auth/register" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
        
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" required>
        </div>
        
        <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
      </form>
      
      <!-- Enlace para ir al formulario de inicio de sesiÃ³n -->
      <div class="text-center mt-3">
        <a href="/auth/login" class="btn btn-link text-decoration-none">Do you already have an account? Sign in</a>
      </div>
    </div>
  </main>
  